@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AccountLayout";
}
<div class="container">
    <div class="row">
        <div class="h-100"></div>
    </div>
</div>
<div class="container">
    <div class="col-md-10">
        <form method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Login">
            <div class="card">
                <div class="card-header bg-info text-white">Login</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="form2Example1">Email address</label>
                                <input type="email" id="form2Example1" class="form-control" asp-for="Username" />

                            </div>
                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="form2Example2">Password</label>
                                <input type="password" id="form2Example2" class="form-control" asp-for="Password" />
                            </div>

                            <div class="row mb-4">
                                <div class="col d-flex justify-content-center">
                                    <!-- Checkbox -->
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                                        <label class="form-check-label" for="form2Example31" > Remember me </label>
                                    </div> &nbsp; &nbsp;&nbsp;&nbsp;
                                    <div class="col">
                                        <!-- Simple link -->
                                        <a href="#!">Forgot password?</a>
                                    </div>
                                </div>
                                <input type="submit" value="Sign in" class="btn btn-info text-white btn-block mb-4" />
                              @*  <button type="button" class="btn btn-info text-white btn-block mb-4" name="SignIn">Sign in</button>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>       
    </div>
</div>
<script>
    $("#pass").keypress(function (event) {
        if (event.keyCode === 13) {
            $("#GFG_Button").click();
        }
    });

    $("#GFG_Button").click(function () {
        alert("Button clicked");
    });
</script>
